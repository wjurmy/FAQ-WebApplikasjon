<div class="panel panel-default">
    <div class="panel-heading">
        <h3 class="panel-title">Innsendte spørsmål</h3>
    </div>
    <div class="panel-body">

        <div class="form-group">
            <label for="category">Velg spørsmål fra list:</label>
            <select ng-model="subQuestion" ng-options="subQuestion.QuestionText for subQuestion in subquestions" class="form-control"></select>
        </div>
        <hr />
        <div ng-show="subQuestion.UserEmail">

            <form ng-submit="submitAnswer()" name="subAnswer" novalidate role="form">

                <div>Kategory: <b>{{subQuestion.Category.Name}}</b></div>
                <div>Avsenders E-post: <b>{{subQuestion.UserEmail}}</b></div>
                <div>Avsenders Navn: <b>{{subQuestion.Name}}</b></div>
                <div>Tilsendt: <b>{{subQuestion.CreatedDateTime | date:"MM/dd/yyyy h:mma"}}</b></div>

                <div class="form-group">
                    <br/>
                    <label for="answer">Svar:</label>
                    <textarea rows="5" cols="40" class="form-control" id="question" ng-model="subQuestion.Answer" required>{{subQuestion.Answer}}</textarea>
                </div>

                <button type="submit" class="btn btn-default">Send svar!</button>

            </form>

        </div>

    </div>
</div>